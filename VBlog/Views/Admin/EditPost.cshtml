@model VBlog.Models.Post
@{
    ViewData["Title"] = "Gönderi Düzenle";
}

<h1><i class="fas fa-edit"></i> Gönderi Düzenle: @Model.Title</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="EditPost" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AuthorId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="form-group mb-2">
                <label asp-for="Title" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-heading"></i></span>
                    <input asp-for="Title" class="form-control form-control-with-icon" />
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-3">
                <input type="checkbox" asp-for="IsPublished" class="form-check-input" />
                <label class="form-check-label" asp-for="IsPublished"><i class="fas fa-globe"></i> Yayınlandı</label>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                <a asp-action="ManagePosts" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}