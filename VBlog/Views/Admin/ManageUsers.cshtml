@model List<VBlog.Models.User>
@using System.Security.Claims
@{
    ViewData["Title"] = "Kullanıcıları Yönet";
}

<h1><i class="fas fa-users"></i> Kullanıcıları Yönet</h1>

<p>
    <a asp-action="CreateUser" class="btn btn-primary"><i class="fas fa-user-plus"></i> Yeni Kullanıcı Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th><i class="fas fa-user"></i> Kullanıcı Adı</th>
            <th><i class="fas fa-envelope"></i> E-posta</th>
            <th><i class="fas fa-user-tag"></i> Rol</th>
            <th><i class="fas fa-calendar-alt"></i> Kayıt Tarihi</th>
            <th><i class="fas fa-cogs"></i> İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.RegisteredAt.ToShortDateString()</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i> Düzenle</a>
                        @if (user.Username != User.FindFirstValue(ClaimTypes.Name))
                        {
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');" asp-antiforgery="true">
                                <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Sil</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5"><i class="fas fa-info-circle"></i> Hiç kullanıcı bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>