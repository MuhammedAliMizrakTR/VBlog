@model VBlog.Models.User
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<h1><i class="fas fa-user-edit"></i> Kullanıcı Düzenle: @Model.Username</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PasswordHash" />
            <input type="hidden" asp-for="RegisteredAt" />

            <div class="form-group mb-2">
                <label asp-for="Username" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input asp-for="Username" class="form-control form-control-with-icon" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <label asp-for="Email" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control form-control-with-icon" type="email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <label asp-for="Role" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                    <select asp-for="Role" class="form-control form-control-with-icon">
                        <option value="Admin">Admin</option>
                        <option value="Author">Author</option>
                        <option value="User">User</option>
                    </select>
                </div>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="newPassword" class="control-label">Yeni Şifre (Değiştirmek istemiyorsanız boş bırakın)</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                    <input id="newPassword" name="newPassword" class="form-control form-control-with-icon" type="password" />
                </div>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                <a asp-action="ManageUsers" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}