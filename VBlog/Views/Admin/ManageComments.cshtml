@model List<VBlog.Models.Comment>
@inject VBlog.Services.PostService _postService
@{
    ViewData["Title"] = "Yorumları Yönet";
}

<h1><i class="fas fa-comments"></i> Yorumları Yönet</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th><i class="fas fa-file-alt"></i> Gönderi Başlığı</th>
            <th><i class="fas fa-comment-alt"></i> Yorum İçeriği</th>
            <th><i class="fas fa-user"></i> Yorum Yapan</th>
            <th><i class="fas fa-calendar-alt"></i> Tarih</th>
            <th><i class="fas fa-cogs"></i> İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var comment in Model)
            {
                <tr>
                    <td>
                        @{
                            var post = _postService.GetPostById(comment.PostId);
                            if (post != null)
                            {
                                <a asp-controller="Post" asp-action="Details" asp-route-id="@comment.PostId">@post.Title</a>
                            }
                            else
                            {
                                <span><i class="fas fa-question-circle"></i> Bilinmeyen Gönderi</span>
                            }
                        }
                    </td>
                    <td>@comment.Content</td>
                    <td>@comment.AuthorUsername</td>
                    <td>@comment.CreatedAt.ToShortDateString()</td>
                    <td>
                        <form asp-controller="Admin" asp-action="DeleteComment" asp-route-postId="@comment.PostId" asp-route-commentId="@comment.Id" method="post" class="d-inline" onsubmit="return confirm('Bu yorumu silmek istediğinizden emin misiniz?');" asp-antiforgery="true">
                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Sil</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5"><i class="fas fa-info-circle"></i> Hiç yorum bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>