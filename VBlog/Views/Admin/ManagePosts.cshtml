@model List<VBlog.Models.Post>
@{
    ViewData["Title"] = "Gönderileri Yönet";
}

<h1><i class="fas fa-file-alt"></i> Gönderileri Yönet</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th><i class="fas fa-heading"></i> Başlık</th>
            <th><i class="fas fa-user-edit"></i> Yazar</th>
            <th><i class="fas fa-globe"></i> Yayınlandı</th>
            <th><i class="fas fa-calendar-alt"></i> Tarih</th>
            <th><i class="fas fa-cogs"></i> İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var post in Model)
            {
                <tr>
                    <td><a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id">@post.Title</a></td>
                    <td>@post.AuthorUsername</td>
                    <td>@(post.IsPublished ? "Evet" : "Hayır")</td>
                    <td>@post.CreatedAt.ToShortDateString()</td>
                    <td>
                        <a asp-action="EditPost" asp-route-id="@post.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i> Düzenle</a>
                        <form asp-action="DeletePost" asp-route-id="@post.Id" method="post" class="d-inline" onsubmit="return confirm('Bu gönderiyi silmek istediğinizden emin misiniz?');" asp-antiforgery="true">
                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Sil</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5"><i class="fas fa-info-circle"></i> Hiç gönderi bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>