<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VBlog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VBlog.styles.css" asp-append-version="true" />

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="light-theme">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-blog me-2"></i> VBlog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home me-2"></i> Ana Sayfa</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @* BURASI DEĞİŞTİ: Sadece Admin veya Author rolündeki kullanıcılar "Gönderi Oluştur" linkini görecek *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Author"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Post" asp-action="Create"><i class="fas fa-plus-circle me-2"></i> Gönderi Oluştur</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Admin" asp-action="Index"><i class="fas fa-user-cog me-2"></i> Admin Paneli</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item me-2">
                            <button id="theme-toggle" class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center" style="width: 38px; height: 38px; padding: 0;">
                                <i class="fas fa-moon"></i>
                            </button>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link d-flex align-items-center"><i class="fas fa-user me-2"></i> Hoş Geldiniz, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" asp-antiforgery="true">
                                    <button type="submit" class="nav-link btn btn-link d-flex align-items-center p-2"><i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus me-2"></i> Kayıt Ol</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt me-2"></i> Giriş Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2025 - VBlog - MuhammedAliMizrakTR - Tüm hakları saklıdır!
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>