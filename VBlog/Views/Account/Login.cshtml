@model VBlog.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<h1><i class="fas fa-sign-in-alt"></i> Giriş Yap</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-route-returnurl="@returnUrl" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Username" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input asp-for="Username" class="form-control form-control-with-icon" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input asp-for="Password" class="form-control form-control-with-icon" type="password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Giriş Yap</button>
            </div>
        </form>
        <p class="mt-3">
            Henüz hesabın yok mu? <a asp-action="Register"><i class="fas fa-user-plus"></i> Kayıt ol</a>.
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}